.wedding-invitation {
  z-index: 4;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 30px 20px;
  transform: scale(0.05);
  opacity: 0;
  transition: transform 0.8s cubic-bezier(0.26, 1.84, 0.39, 0.61),
    opacity 0.5s linear;
  background-size: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

.wedding-invitation.invitation-bounce {
  opacity: 1;
  transform: scale(1);
  -webkit-transform: scale(1);
}

.invitation-container {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.6s cubic-bezier(0.4, 0, 1, 1);
}

.invitation-container.invitation-down {
  transform: translateY(20px);
}

.invitation-container .invitation-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #d65047;
  border-radius: 10px;
  perspective: 500px;
  box-shadow: 0 0 20px 2px rgba(0, 0, 0, 0.15);
}

.invitation-cover .cover-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 10px 20px;
  transition: transform 0.6s cubic-bezier(0.4, 0, 1, 1);
  box-sizing: border-box;
}

.invitation-cover .cover-content.invitation-up {
  transform: translateY(-40px);
}

.cover-content .content-inside {
  height: 100%;
  padding: 20px;
  color: #a9895d;
  background-color: #fff1de;
  text-align: center;
  overflow: auto;
  box-sizing: border-box;
}

.cover-inside-left {
  position: absolute;
  left: 0;
  top: 0;
  width: 70%;
  height: 100%;
  border-radius: 10px;
  background-color: #d65047;
  box-shadow: 5px 0 10px rgba(0, 0, 0, 0.2);
  z-index: 6;
  transition: transform 0.5s;
  transform-origin: 0 50%;
}

.cover-inside-left.opening {
  transform: rotate3d(0, 1, 0, -140deg);
}

.cover-inside-right {
  position: absolute;
  right: 0;
  top: 0;
  width: 40%;
  height: 100%;
  border-radius: 10px;
  background-color: #d65047;
  box-shadow: -5px 0 10px rgba(0, 0, 0, 0.2);
  z-index: 5;
  transition: transform 0.5s;
  transform-origin: 100% 50%;
}

.cover-inside-right.opening {
  transform: rotate3d(0, 1, 0, 140deg);
}

.cover-inside-seal {
  position: absolute;
  left: 70%;
  bottom: 100px;
  width: 80px;
  height: 80px;
  margin-left: -40px;
  z-index: 7;
  transform-origin: 50% 50%;
  transition: all 0.8s cubic-bezier(0.4, 0, 1, 1);
}

.cover-inside-seal.invitation-flight {
  opacity: 0;
}
