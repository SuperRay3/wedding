  url('iconfont.svg?t=1583986683603#iconfont') format('svg'); /* iOS 4.1- */
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.iconzhankai:before {
  content: "\e607";
}

.terminal-wrapper {
  position: fixed;
  bottom: -100%;
  height: 65%;
  width: 100%;
  border-top: 1px solid rgb(65, 65, 65);
  background-color: rgb(37, 37, 38);
  transition: bottom .8s ease-in-out,
              height .4s ease;
}

.terminal-wrapper.show {
  bottom: 0;
}

.terminal-wrapper.extand {
  height: 100%;
}

.content-wrapper {
  height: 100%;
  padding: 0 10px;
  overflow: hidden;
}

.opt-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 9px;
}

.left-area,
.right-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left-area .text,
.right-area .icon {
  padding: 8px 0;
  margin-right: 15px;
  font-size: 18px;
}

.left-area .text {
  padding: 5px;
}

.left-area .text:last-child,
.right-area .icon:last-child {
  margin-right: 0;
}

.left-area .text {
  font-size: 28rpx;
  color: rgb(147, 147, 147);
}

.left-area .text.active {
  color: #fff;
  border-bottom: 1px solid #fff;
}

.right-area .icon:last-child {
  margin-right: 0;
}

.right-area .iconzhankai {
  transform: rotateZ(180deg);
  transition: all .4s ease;
}

.right-area .iconzhankai.extand {
  transform: rotateZ(0);
}

.terminal-content {
  height: calc(100% - 135px);
  padding-bottom: 10px;
  font-size: 32rpx;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
}

.terminal-content .login-date {
  margin-bottom: 8px;
}

.terminal-content .cmds-wrapper {
  margin-top: 3px;
}

.terminal-content .cmds-wrapper .user-info,
.terminal-content .cmds-wrapper .cmd-content,
.terminal-content .cmds-wrapper .input-cursor {
  display: inline-block;
  vertical-align: top;
}

.terminal-content .cmds-wrapper .user-info {
  color: rgb(0, 195, 8);
}

.terminal-content .cmds-wrapper .cmd-content {
  display: inline;
  margin-left: 5px;
}

.terminal-content .cmds-wrapper .cmd-content:empty {
  margin-left: 0;
}

.terminal-content .cmds-wrapper .input-cursor {
  width: 5px;
  height: 22px;
  margin-left: 5px;
  background-color:#BBB;
  animation: cursor-blink .7s ease infinite alternate;
}

.cmds-wrapper .rst .step {
  display: flex;
  align-items: center;
}

.cmds-wrapper .rst .step .step-item {
  margin-right: 8px;
}

.cmds-wrapper .rst .step .time {
  color: rgb(102, 102, 102);
}

.cmds-wrapper .rst .step .label {
  color: rgb(66, 152, 175);
}

.cmds-wrapper .rst .step .duration {
  color: rgb(176, 70, 178);
}

.input-area {
  margin: 0 -10px;
}

.cmd-input-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-width: 1px 0 1px 0;
  border-style: solid;
  border-color: rgb(223, 223, 223);
  background-color: rgb(248, 248, 248);
}

.cmd-input-wrapper .cmd-input {
  flex-grow: 1;
  height: 43px;
  padding: 0 5px;
  color: rgb(28, 28, 28);
}

.cmd-input-wrapper .btn {
  flex-basis: 17%;
  text-align: center;
  color: rgb(28, 28, 28);
  border-left: 1px solid rgb(223, 223, 223);
  background-color: rgb(248, 248, 248);
  font-weight: normal;
}

.input-area .btn-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 45px;
  text-align: center;
  color: rgb(28, 28, 28);
  background-color: rgb(248, 248, 248);
}

.input-area .btn-wrapper .btn {
  flex-basis: 50%;
}

.input-area .btn-wrapper .clear {
  border-right: 1px solid rgb(223, 223, 223);
}

/* terminal 显示隐藏按钮 */
.terminal-switch {
  position: fixed;
  bottom: 50rpx;
  right: 10px;
  font-size: 32rpx;
}
