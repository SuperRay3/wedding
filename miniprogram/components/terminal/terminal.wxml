<view class="terminal-wrapper">
  <view class="content-wrapper">
    <view class="opt-bar">
      <view class="left-area">
        <view class="text active">TERMINAL</view>
      </view>
      <view class="right-area">
        <view class="icon iconfont iconzhankai"></view>
      </view>
    </view>
    <scroll-view class="terminal-content" scroll-y="true">
      
    </scroll-view>
    <view class="input-area">
      <!-- 命令输入 -->
      <view class="cmd-input-wrapper">
        <input class="cmd-input" placeholder="请输入指令" />
        <view class="btn send">发送</view>
      </view>
      <!-- 操作按钮 -->
      <view class="btn-wrapper">
        <view class="btn clear">清空</view>
        <view class="btn hide">隐藏</view>
      </view>
    </view>
  </view>
</view>
