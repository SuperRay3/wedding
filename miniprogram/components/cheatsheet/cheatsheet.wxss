/* components/cheatsheet.wxss */
@import "../../style/animate.wxss";
@import '../../style/smartisan-note';

.cheatsheet-wrapper {
    z-index: 8;
    position: fixed;
    top: 50%;
    left: 50%;
    width: 85%;
    height: 85%;
    transform: translate(-50%, -50%);
}

.content-container .content-list .content-row  {
    display: flex;
    align-items: center;
    height: 2.5em;
    font-size: 34rpx;
    text-align: left;
    color: #645647;
}

.content-list .content-row.blockquote {
    position: relative;
    margin-bottom: 40rpx;
    padding-left: 40rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: 0 0;
    background-size: 34rpx;
    font-size: 30rpx;
    color: #b4a08e;
}

.content-list .content-row .icon {
    margin-right: 10rpx;
}

.content-list .content-row .cmd-des {
    margin-left: .5em;
}